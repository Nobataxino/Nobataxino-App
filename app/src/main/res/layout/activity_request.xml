<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestActivity"
    android:background="#1A59E65F">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_marginStart="20dp"
            android:src="@drawable/nobataxino_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/ebtekar"
            android:text="نوبتاکسینو"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="70dp"
       android:padding="30dp"
       android:orientation="vertical">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="122dp"
           android:layout_marginTop="20dp"
           android:background="#4D59E65F"
           android:padding="10dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="20dp"
               android:layout_marginTop="10dp"
               android:layout_marginEnd="10dp"
               android:text="تعداد رانندگان در استراحتگاه اول:"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:fontFamily="@font/iran_sans"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="30dp"
               android:layout_marginTop="8dp"
               android:layout_marginEnd="50dp"
               android:text="234 نفر"
               android:textSize="20sp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

       </androidx.constraintlayout.widget.ConstraintLayout>

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="122dp"
           android:layout_marginTop="25dp"
           android:background="#7359E65F"
           android:padding="10dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="20dp"
               android:layout_marginTop="10dp"
               android:layout_marginEnd="10dp"
               android:text="تعداد رانندگان در پارکینگ موقت:"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:fontFamily="@font/iran_sans"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="30dp"
               android:layout_marginTop="8dp"
               android:layout_marginEnd="50dp"
               android:text="34 نفر"
               android:textSize="20sp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

       </androidx.constraintlayout.widget.ConstraintLayout>

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="122dp"
           android:layout_marginTop="25dp"
           android:background="#9959E65F"
           android:padding="10dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="20dp"
               android:layout_marginTop="10dp"
               android:layout_marginEnd="10dp"
               android:text="تعداد رانندگان در سکوی مسافرگیری:"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:fontFamily="@font/iran_sans"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="30dp"
               android:layout_marginTop="8dp"
               android:layout_marginEnd="50dp"
               android:text="19 نفر"
               android:textSize="20sp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

       </androidx.constraintlayout.widget.ConstraintLayout>


       <Button
           android:id="@+id/loginButton"
           android:layout_width="150dp"
           android:layout_height="38dp"
           android:layout_marginTop="30dp"
           android:layout_gravity="center"
           android:background="@drawable/button_background"
           android:fontFamily="@font/iran_sans"
           android:textSize="16sp"
           android:text="درخواست نوبت"/>
       <TextView
           android:layout_width="60dp"
           android:layout_height="20dp"
           android:text="59 min"
           android:layout_gravity="center"
           android:textAlignment="center"
           android:textSize="15dp"
           android:layout_marginTop="7dp"/>


   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>